@model IEnumerable<ContactManager.Models.Notification>

@if (Model != null && Model.Any())
{
    <div class="alert alert-info" role="alert">
        <h6>Notifications</h6>
        <ul>
            @foreach (var notification in Model.OrderByDescending(n => n.CreatedAt).Take(10)) // Show last 3 notifications
            {
                <li>@notification.Message (@notification.Type, @notification.CreatedAt)</li>
            }
        </ul>
    </div>
}